class Student:

  def __init__(self, name, roll_number, mark):
    self.name = name
    self.roll_number = roll_number
    self.mark = mark


def sort_students(student_list):
  # Sort the list of students in descending order of CGPA
  sorted_students = sorted(student_list,
                           key=lambda student: student.mark,
                           reverse=True)
  # Syntax - lambda arg:exp
  return sorted_students


# Example usage:
students = [
    Student("Gokul", "211", 98),
    Student("Jaffer", "212", 95),
    Student("Vishnu", "214", 89),
    Student("shaswanth", "213", 92),
]

sorted_students = sort_students(students)

# Print the sorted list of students
for student in sorted_students:
  print("Name: {}, Roll Number: {}, mark: {}".format(student.name,
                                                     student.roll_number,
                                                     student.mark))